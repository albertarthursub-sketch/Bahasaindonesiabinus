rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Teachers collection - allow teachers to create/update their own profile
    match /teachers/{teacherId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == teacherId;
      allow create: if request.auth != null;
    }

    // Teacher OTPs collection - allow reading/writing own OTP records
    match /teacherOTPs/{otpId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if true;  // Allow creation before auth
    }

    // Lists collection - readable by all authenticated users
    match /lists/{listId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Assignments collection - accessible to teachers and assigned students
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Students collection - readable by teachers, the student themselves, and unauthenticated for login code lookup
    match /students/{studentId} {
      allow read: if request.auth != null || request.query.filters.fieldFilter[0].field.fieldPath == 'loginCode';
      allow write: if request.auth.uid == resource.data.teacherId || request.auth.uid == studentId;
      allow create: if request.auth != null;
    }
    
    // Classes collection - teachers can read/write their own
    match /classes/{classId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Progress collection - students can write their own progress
    match /progress/{progressId} {
      allow read: if request.auth.uid == resource.data.studentId;
      allow write: if request.auth.uid == resource.data.studentId;
      allow create: if request.auth != null;
    }
    
    // SPO Activities
    match /spoActivities/{activityId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }

    // Teacher Resources
    match /teacherResources/{resourceId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if request.auth.uid == resource.data.studentId;
      allow write: if request.auth.uid == resource.data.studentId;
      allow create: if request.auth != null;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lists collection - readable by all authenticated users
    match /lists/{listId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Assignments collection - accessible to teachers and assigned students
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Students collection - readable by teachers and the student themselves
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId || request.auth.uid == studentId;
      allow create: if request.auth != null;
    }
    
    // Classes collection - teachers can read/write their own
    match /classes/{classId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Progress collection - students can write their own progress
    match /progress/{progressId} {
      allow read: if request.auth.uid == resource.data.studentId;
      allow write: if request.auth.uid == resource.data.studentId;
      allow create: if request.auth != null;
    }
    
    // SPO Activities
    match /spoActivities/{activityId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

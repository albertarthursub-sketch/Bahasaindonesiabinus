rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Teachers collection - allow teachers to create/update their own profile
    match /teachers/{teacherId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == teacherId;
      allow create: if request.auth != null;
    }

    // Teacher OTPs collection - allow reading/writing own OTP records
    match /teacherOTPs/{otpId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow create: if true;  // Allow creation before auth
    }

    // Lists collection - readable by all (students need to view vocabulary lists)
    match /lists/{listId} {
      allow read: if request.auth != null || true;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Assignments collection - accessible to teachers and students
    match /assignments/{assignmentId} {
      allow read: if request.auth != null || true;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Students collection - readable by teachers, the student themselves, and unauthenticated for login code lookup
    match /students/{studentId} {
      allow read: if request.auth != null || true;
      allow write: if request.auth.uid == resource.data.teacherId || request.auth.uid == studentId;
      allow create: if request.auth != null;
    }
    
    // Classes collection - readable by all (students need class info)
    match /classes/{classId} {
      allow read: if request.auth != null || true;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }
    
    // Progress collection - students can write their own, teachers can read all students' progress
    match /progress/{progressId} {
      allow read: if request.auth.uid == resource.data.studentId || exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
      allow write: if request.auth.uid == resource.data.studentId;
      allow create: if request.auth != null;
    }
    
    // SPO Activities - readable by all (for student access)
    match /spoActivities/{activityId} {
      allow read: if request.auth != null || true;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }

    // Teacher Resources
    match /teacherResources/{resourceId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null;
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if request.auth.uid == resource.data.studentId;
      allow write: if request.auth.uid == resource.data.studentId;
      allow create: if request.auth != null;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

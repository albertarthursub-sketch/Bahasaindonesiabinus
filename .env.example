# Firebase Cloud Functions Environment Variables
# Copy this file to .env and fill in your values


# JWT Secret for token signing
# Generate a random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-very-secure-random-string-at-least-32-characters

# Optional: Firebase Service Account (for local development)
# Download from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}

# Optional: Google Cloud Credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

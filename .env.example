# Local development environment variables
# Copy this file to .env and fill in real values for local development
# NEVER commit .env file with real secrets to git

# Firebase Configuration
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=bahasa-indonesia-73d67
VITE_FIREBASE_STORAGE_BUCKET=bahasa-indonesia-73d67.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_APP_ID

# Backend Configuration
VITE_API_URL=http://localhost:5000
NODE_ENV=development

# API Keys (Backend Only - Never commit real values)
# Get from: https://console.anthropic.com/account/billing/overview
CLAUDE_API_KEY=sk-ant-...

# Get from: https://console.anthropic.com/account/billing/overview
VITE_CLAUDE_API_KEY=sk-ant-...

# Get from: https://platform.stability.ai/account/billing
STABILITY_API_KEY=sk-...

# Get from: https://platform.stability.ai/account/billing
VITE_STABILITY_API_KEY=sk-...

# Email Configuration (Gmail App Password)
# Use App Password from https://myaccount.google.com/apppasswords (not regular Gmail password)
TEACHER_EMAIL_USER=your-email@gmail.com
TEACHER_EMAIL_PASSWORD=your-app-password

# JWT Secret - CRITICAL: Use strong random value
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secure-random-secret-key-here

# CORS Configuration - list origins separated by commas
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

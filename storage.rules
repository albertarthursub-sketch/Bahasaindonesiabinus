rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users for vocabulary images
    // (authenticated via proxy endpoint on backend for sensitive data)
    match /vocabulary/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to AI-generated vocabulary images
    match /ai-vocabulary/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow teachers to write to their own vocabulary uploads
    match /vocabulary/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

